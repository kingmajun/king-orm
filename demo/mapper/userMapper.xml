<?xml version="1.0" encoding="utf-8"?>
<sqlMapper namespace="demo.mapper.user">
    <select  id="getuser">
        select * from user2
        <if test="username=='majun'">
            where username = #{username} and 1=1
        </if>
    </select>
    <update id="update">
        update user set username= #{username} where id=#{id} and in (${params})
    </update>
    <insert id="add">
        insert into user(id,username) values(#{username},#{username})
    </insert>
    <delete id="del">
        delete from user where id = #{id}
    </delete>

</sqlMapper>